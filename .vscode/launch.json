    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Pytest (venv)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/py.test.exe",
            "console": "integratedTerminal",
            "args": [
                "-k=unit",
                // "-n=2",
                // "--dist=loadfile",
                // "--alluredir=./logs/allure_report",
                // "--collect-only",
            ]
        },
        {
            "name": "Python: Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}